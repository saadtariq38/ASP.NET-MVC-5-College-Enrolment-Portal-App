@model mvcApp1.ViewModels.LoginFormViewModel

@{
    ViewBag.Title = "Login";
}


<div class="my-5">
    <div class="form-horizontal">
    

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()



        <form>
            <div class="container-sm text-center border border-2 border-secondary">
                <h2 class="text-center my-2">Login Details</h2>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group my-4">
                    @Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "control-label col-md-2 my-2" })
                    <div class="">
                        @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control-2" } })
                        <div class="my-2">
                            @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="form-group my-4">
                    @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="">
                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control-2" } })
                        <div class="my-2">
                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="form-group mb-4">
                    <div class="">
                        <input type="submit" value="Login" class="btn btn-primary" />
                    </div>
                </div>

                <div class="my-5">
                    Dont have an account?  @Html.ActionLink("Register", "Register", "Account", new { @class = "btn btn-sm btn-success" })
                </div>
            </div>
        </form>
    }

    
    </div>
</div>


