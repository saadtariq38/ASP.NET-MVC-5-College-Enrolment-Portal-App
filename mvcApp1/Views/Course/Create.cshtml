@model mvcApp1.ViewModels.CourseTeacherViewModel


@if (Session["UserName"] == null)
{
    Response.Redirect("~/Account/Login", false);
}

<div class="my-5">
    
    @using (Html.BeginForm()) 
    {
        @Html.AntiForgeryToken()
    
        <div class="form-horizontal container-sm text-center border border-2 border-secondary col-lg-12 col-md-10 col-sm-8 col-6">
            <h3 class="text-center my-2">Register a new course</h3>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group my-4">
                @Html.LabelFor(model => model.Course.Name, htmlAttributes: new { @class = "control-label col-md-2 my-2" })
                <div class="">
                    @Html.EditorFor(model => model.Course.Name, new { htmlAttributes = new { @class = "form-control-2" } })
                    <div class="my-2">
                        @Html.ValidationMessageFor(model => model.Course.Name, "", new { @class = "text-danger" })
                    </div>
                    
                </div>
            </div>

            <div class="form-group my-4">
                @Html.LabelFor(model => model.Course.CreditHours, htmlAttributes: new { @class = "control-label col-md-2 my-2" })
                <div class="">
                    @Html.EditorFor(model => model.Course.CreditHours, new { htmlAttributes = new { @class = "form-control-2" } })
                    <div class="my-2">
                        @Html.ValidationMessageFor(model => model.Course.CreditHours, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Course.TeacherId, htmlAttributes: new { @class = "control-label col-md-2 my-2" })
                <div class="">
                    @Html.DropDownListFor(model => model.Course.TeacherId, new SelectList(Model.Teachers, "TeacherId", "TeacherName"),"Select Teacher", new {  @class = "form-control-2" } )
                    <div class="my-2">
                        @Html.ValidationMessageFor(model => model.Course.TeacherId, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="form-group my-5">
                <div class="">
                    <input type="submit" value="Register Course" class="btn btn-primary" />
                </div>
            </div>
        </div>
    }

</div>

<div class="mx-5">
    @Html.ActionLink("Back to List", "GetCourses")
</div>
