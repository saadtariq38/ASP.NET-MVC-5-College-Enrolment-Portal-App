@model IEnumerable<mvcApp1.Models.Club>



@{
    ViewBag.Title = "List of all student clubs";
}

    <h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ChairName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.memberNum)
        </th>
        <th></th>
    </tr>

    @if (Model != null)
    {

        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ChairName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.memberNum)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ClubId }) |

                    @Html.ActionLink("Delete", "Delete", new { id = item.ClubId })
                </td>
            </tr>
        }
    }
    else
    {
        <p>no records found</p>
    }

</table>
