@model mvcApp1.Models.Teacher


@if (Session["UserName"] == null)
{
    Response.Redirect("~/Account/Login", false);
}

<div class="my-5">
    @using (Html.BeginForm("Create", "Teacher"))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal container-sm text-center border border-2 border-secondary col-lg-12 col-md-10 col-sm-8 col-6">
            <h2 class="text-center my-2">Teacher Information</h2>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group my-4">
                @Html.LabelFor(model => model.TeacherName, htmlAttributes: new { @class = "control-label col-md-2 my-2" })
                <div class="">
                    @Html.EditorFor(model => model.TeacherName, new { htmlAttributes = new { @class = "form-control-2" } })
                    <div class="my-2">
                        @Html.ValidationMessageFor(model => model.TeacherName, "", new { @class = "text-danger" })
                    </div>
                
                </div>
            </div>

            <div class="form-group my-4">
                @Html.LabelFor(model => model.CourseTaught, htmlAttributes: new { @class = "control-label col-md-2 my-2" })
                <div class="">
                    @Html.EditorFor(model => model.CourseTaught, new { htmlAttributes = new { @class = "form-control-2" } })
                    <div class="my-2">
                        @Html.ValidationMessageFor(model => model.CourseTaught, "", new { @class = "text-danger" })
                    </div>
                
                </div>
            </div>

            <div class="form-group my-5">
                <div class="">
                    @Html.HiddenFor(m => m.TeacherId)
                    <input type="submit" value="Save a new teacher" class="btn btn-primary" />
                </div>
            </div>
        </div>
    }
</div>

<div class="mx-5">
    @Html.ActionLink("Back to List", "Index")
</div>
